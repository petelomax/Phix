integer fn = open("Fortunes.txt","r"), line = 0
string fortune = "There be no fortunes to be made here.\n"
if fn!=-1 then
    while 1 do
        object next = gets(fn)
        if atom(next) then exit end if
        line += 1
        if rand(line)=1 then fortune = next end if
    end while
    close(fn)
end if
puts(1,fortune)

