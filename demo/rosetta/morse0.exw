procedure ext2(string root, object data)
object dot, dash
    if sequence(data) then
        {data,dot,dash} = data
        ext2(root,data)
        ext2(root&'.',dot)
        ext2(root&'-',dash)
    elsif data!=0 then
        morse[data] = root
--      printf(1,"morse['%c']:=%s\n",{data,root})
    end if
end procedure

