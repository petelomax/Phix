sequence morse = repeat(0,255)

procedure setMorse(sequence data)
    for i=1 to length(data) do
        object di = data[i]
        if string(di) then
            if morse[di[1]]!=0 then ?9/0 end if
            morse[di[1]] = di[2..$]
        end if
    end for
end procedure

