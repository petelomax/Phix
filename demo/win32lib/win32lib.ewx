                          {w32HClick,   0},  -- Button
                          {w32HClick,   0},  -- Label Click
                          {w32HChange,  w32CHG_Sel},     -- list box notify change
                          {w32HChange,  w32CHG_Chg},     -- editbox notify change
                          {w32HChange,  w32CHG_Chg},     -- combo data changed
                          {w32HChange,  w32CHG_Sel},     -- combo selection changed
