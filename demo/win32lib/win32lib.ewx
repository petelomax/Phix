--      sbtext = /getText({StatBar, 2})
--
--      btnCaption = getText(myBtn)
--/endcode

global function getText(object pID)

sequence text

    if atom(pID) then
        text = getCaption(pID)
        if length(text) = 0 then
            text = getData(pID)
        end if
    else
        text = getData(pID)
    end if


    return text

end function
