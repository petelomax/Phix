                VOID = sendMessage(ctrl_Parent[id],TCM_DELETEITEM,pos,0)
                ctrl_Group[ctrl_Parent[id]] = w32removeItem(id,ctrl_Group[ctrl_Parent[id]])
                ctrl_Specific[ctrl_Parent[id]] = w32removeItem(id,ctrl_Specific[ctrl_Parent[id]])
            end if
        end if
