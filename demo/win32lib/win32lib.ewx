function peek2u(object addr)
sequence res
    if atom(addr) then
        return peek(addr) + peek(addr+1) * 256
    end if
    res = repeat(0,addr[2])
    addr = addr[1]
    for i = 1 to length(res) do
        res[i] = peek(addr) + peek(addr+1) * 256
        addr+=2
    end for
    return res
end function

