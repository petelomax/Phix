    XPM_ERR_HEADER  = -3,   -- error in XPM header
    XPM_ERR_COLOR   = -4    -- couldn't translate color code

constant XPM_CODES =
    " .+@#$%&*=-;>,')!~{]^/(_:<[}|1234567890" &
"abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"

