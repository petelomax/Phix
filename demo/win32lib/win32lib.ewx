function setFindSel(integer id, atom flag, atom fr)
object index, range

        index = getIndex(id)-1
        range = w32fetch(fr, FINDREPLACE_lpstrFindWhat)

        if and_bits(flag, FR_DOWN) then
            index = {index, #FFFF}
        else
            index = {0, index}
        end if

        range = {findText(id, range, index, flag), length(range)}
        range[2] += range[1]

        setIndex(id, range)
        return range[1]
end function

