procedure poke2(atom addr, object x)
    if integer(x) then
        if x < 0 then
            x += 65536
        end if  
        poke(addr, x) -- note: only the lower 8 bits are stored
        poke(addr+1, floor(x/256))
    else -- sequence
        for i = 1 to length(x) do
            poke2(addr+2*(i-1), x[i])
        end for
    end if
end procedure

