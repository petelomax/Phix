--/li SB_LINELEFT
--/li SB_LINEDOWN
--/li SB_LINERIGHT
--/li SB_PAGEUP
--/li SB_PAGELEFT
--/li SB_PAGEDOWN
--/li SB_PAGERIGHT
--/li SB_THUMBPOSITION
--/li SB_THUMBTRACK
--/li SB_TOP
--/li SB_LEFT
--/li SB_BOTTOM
--/li SB_RIGHT
--/li SB_ENDSCROLL
--/li SB_UserDefined
