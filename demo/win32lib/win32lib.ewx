    -- /li /b WS_TABSTOP: the control can be tabbed to

    className[PushButton] = "button"
    classType[PushButton] = BUTTON
    classStyle[PushButton] = w32or_all({WS_CLIPPINGCHILD,
                                        WS_VISIBLE,
                                        BS_PUSHBUTTON,
                                        WS_TABSTOP})

