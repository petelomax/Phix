global function getSystemMetrics(object Code)
sequence lResult
        if atom(Code) then
            return w32Func(xGetSystemMetrics,{Code})
        end if

        lResult = repeat(0, length(Code))
        for i = 1 to length(Code) do
            lResult[i] = w32Func( xGetSystemMetrics, { Code[i] })
        end for
        return lResult
end function



