                dib[i] = {w32Func(CopyImage,{createDIB(bmp[i]),IMAGE_BITMAP,32,32,
                                             LR_COPYDELETEORG}),
                          w32Func(CopyImage,{createDIB(bmpToMask(bmp[i])),IMAGE_BITMAP,32,32,
                                             w32or_all({LR_MONOCHROME,LR_COPYDELETEORG})})}
            end for

