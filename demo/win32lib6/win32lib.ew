        lToday[3] = w32fetch( lSysTime, SYSTEMTIME_wDay )
        lToday[4] = w32fetch( lSysTime, SYSTEMTIME_wDayOfWeek )

    end if

    w32release_mem( lSysTime )
    return lToday
end function


