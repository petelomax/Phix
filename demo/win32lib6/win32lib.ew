global function addEuBmp( object bmp )
sequence list, dib

        if length( bmp ) = 1 then
            list = ilicon_list

--PL 29/4/09:
--          dib = {w32Func(CopyImage,{createDIB(bmp),32,32,IMAGE_BITMAP,
            dib = {w32Func(CopyImage,{createDIB(bmp),IMAGE_BITMAP,32,32,
                                      LR_COPYDELETEORG}),
                   w32Func(CopyImage,{createDIB(bmpToMask(bmp)),IMAGE_BITMAP,32,32,
