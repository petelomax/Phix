--      /drawLine( TheWindow, 10, 10, 100, 100 )
--/endcode

global procedure drawLine( integer id, integer pStartX, integer pStartY, integer pEndX, integer pEndY )

    object hdc

    -- get the device context
    hdc = getDC( id )

