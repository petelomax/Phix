function print_format(object o)
-- returns object formatted for wPrint
    sequence s

    if integer(o) then
        -- number
        if vShowChars!=0
        and find(o,"`~!@#$%^&*()_+-={}|[]\\:\";'<>?,./" &
                 "1234567890" &
                 "abcdefghijklmnopqrstuvwxyz" &
                 "ABCDEFGHIJKLMNOPQRSTUVWXYZ") then
            return sprintf("'%s'",o)
        else
            return sprintf("%d",o)
        end if
    elsif atom(o) then
        return sprintf("%f",o)
    else
        -- list
        s = "{"
        for i=1 to length(o) do
            s = s & print_format(o[i])
            if i < length(o) then
                s = s & ","
            end if
        end for
        s = s & "}"
        return s
    end if

    end function


